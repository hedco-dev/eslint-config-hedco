{
    "extends": "rallycoding",
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "globals": {
        "sails": true,
        "_": true
    },
    "rules": {
        "arrow-body-style": "off",
        "no-underscore-dangle": "off",
        "max-len": ["warn", 120],
        "guard-for-in": "off",
        "no-restricted-syntax": [
            "error",
            "DebuggerStatement",
            "LabeledStatement",
            "WithStatement"
        ],
        "no-param-reassign": "off",
        "key-spacing": ["error", { "align": "value" }]
    }
}